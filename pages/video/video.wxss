/* pages/video/video.wxss */
@import "/app.wxss";
@import "../../static/iconfont/iconfont.wxss";
/* 头部 */
.header{
  padding:10rpx;
}
.header image{
  width:60rpx;
  height:60rpx;
}
.search{
  flex:1;
  align-items: center;
  height:60rpx;
  line-height:60rpx;
  border:1px solid #ddd;
  border-radius:10rpx;
  text-align: center;
  color:#d43c33;
  margin:0 10rpx;
}
/* 导航 */
.nav_scroll{
  flex-wrap: nowrap;
  white-space: nowrap;
  justify-content: flex-start;
  height:80rpx;
}
.nav_item{
  padding:0 30rpx;
  height:60rpx;
  line-height:60rpx;
}
.nav_item .active{
  border-bottom:1px solid #f00;
}
/* 视频列表 */
.video_scroll{
  height:calc(100vh - 170rpx);
  /* 用来测试页面上拉触底回调 */
  /* height:calc(100vh - 100rpx) */
}
.video_scroll_item{
  padding:0 20rpx;
}
.video_common{
  width:100%;
  height:360rpx;
  border-radius:10rpx;
}
.video_scroll_footer{
  padding:20rpx 0;
  border-top:1px solid #eee;
  line-height:60rpx;
}
.video_scroll_title{
  padding:20rpx 0;
  max-width: 700rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size:28rpx;
}
.video_avatar{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right:10rpx;
}
.video_comments{
  flex: 0 0 200rpx;
}
.video_comments .item{
  position: relative;
  margin:0 0 0 30rpx;
  width:40rpx;
  height:40rpx;
}
.video_comments .iconfont{
  font-size:40rpx;
}
.video_comments .count{
  position: absolute;
  top:-24rpx;
  font-size:20rpx;
}
.video_comments .btn{
  padding:0;
  border:none;
}
.video_comments .btn:after{
  border: none;
}