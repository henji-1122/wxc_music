/* pages/index/index.wxss */
.block_banner{
  width:100%;
}
.block_banner image{
  width:100%;
  height:100%;
}

/* nav */
.block_nav{
  padding:10rpx 20rpx;
}
.block_nav .iconfont{
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  font-size: 40rpx;
  color:#fff;
  background:#d43c33;
  border-radius:50%;
  margin:10rpx 0;
  text-align: center;
}

/* 推荐歌曲 */
.block_recommend{
  margin:20rpx;
}
.block_scroll{
  padding-top:10rpx;
  height:280rpx;
}
.scrollItem{
  width:200rpx;
  margin-right:20rpx;
}
.scrollItem image{
  width:200rpx;
  height:200rpx;
  border-radius:10rpx;
}
.scrollItem text{
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}

/* 排行榜 */
.block_ranking{
  padding:20rpx;
}
.ranking{
  height:400rpx;
}
.title{
  padding:10rpx 0;
}
.ranking_item {
  margin-bottom:10rpx;
  justify-content: flex-start;
  align-items: center;
}
.ranking_item image{
  width:100rpx;
  height:100rpx;
  margin-right:10rpx;
}
.count{
  padding:0 15rpx;
}
.music{
  max-width:400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}